.PHONY: transform test clean allclean

transform:
	psyclone -api lfric -nodm -l output -opsy main_alg_psy.f90 -oalg main_alg.f90 main_alg.x90

# For PSyclone CI:
test:
	$(MAKE) transform 2>&1 | grep "Kernel file 'summation_w0_to_w3_kernel_mod\."\
	"\[fF\]90' not found in" >/dev/null

# Not actually required, but to avoid errors when cleaning top level
clean:
allclean:
